<% content_for :head_title do %>Start List Management<% end %>
<% content_for :top_nav do %><%= render :partial => 'shared/top_nav',:locals => {:param => "myracemenu"}%><% end %>
<% content_for :top_area do %><%= render :partial => 'director/shared/top_nav', :locals => {:step => "2"}%><% end %>
<table width="900" border="0" cellspacing="0" cellpadding="0">
<tr>
<td width="6">&nbsp;</td>
<td width="774" align="center" valign="bottom" class="tableHEAD"><p>Start List Management</p></td>
<td width="120" class="sidebarHeaderText">Featured Events </td>
</tr>
<tr>
<td>&nbsp;</td>
<td class="content_bg">
	<% form_tag({:controller => "setup", :action => "start_list"}, {}) do%>
	<div id="director_table_holder">
		<div style="padding-right:10px;padding-left:20px;padding-top: 3px;	padding-bottom: 3px;">
			<%= show_error(flash[:notice])%>
		</div>
		
		<table width="100%" cellspacing="0">
			<tr class="director_row1">
				<td width="20px"></td>
				<td colspan="2">Your Start List URL: <a href="<%= "http://www.racemenu.com/event/start_list/#{@dir_event.id}"%>"><%= "http://www.racemenu.com/event/start_list/#{@dir_event.id}"%></a></td>
			</tr>
			<tr class="director_header_row">
				<td width="20px"></td>
				<td>Race / Category</td>
				<td>Display?</td>
				
			</tr>
			<% @dir_event.races.each do | race | %>
			<tr class="<%= cycle('director_row1', 'director_row2')%>">
				<td width="20px"></td>
				<td><%= race.name %></td>
				<td><%=check_box_tag 'search_request[types][]', "#{race.id}", race.show_on_start_list == true %></td>
			</tr>
            <% end %>
            <tr class="director_row1">
				<td width="20px"></td>
				<td colspan="2"></td>
			</tr>
            <tr class="director_row1">
				<td width="20px"></td>
				<td colspan="2"><%=check_box_tag 'show_on_total', "#{@dir_event.id}", @dir_event.show_total_on_start_list %>display total entrants on event details page</td>
			</tr>
			<tr class="director_row1">
				<td width="20px"></td>
				<td colspan="2" align="center"><%= ok_button_image(true) %>
			</tr>
			
			
		</table>
      <br/>
      
	</div>
	<% end %>
</td>
<td width="120" rowspan="2" align="left" valign="top" id="ads"><%= render :partial => 'shared/ads'%></td>
<td style="padding-right:10px;"></td>
</tr>
<tr>
<td>&nbsp;</td>
<td id="tableBOTTOMshadow">&nbsp;</td>
</tr>
<%= render :partial => 'shared/footer'%>
</table>