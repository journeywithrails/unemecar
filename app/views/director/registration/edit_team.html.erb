        <tr><td colspan="2"><%= show_error(flash[:error]) %></td></tr>
      <% end  %>
	 <tr>
	    <td align="right" width="300px">Timestamp, UTC (EST=UTC-5):</td>
	    <td ><%= @team.created_at.strftime("%Y-%m-%d %I:%M%p %Z") %></td>
	   </tr>
       <tr>
	    <td align="right"></td>
	    <td><%= check_box(:team, :approved, { :class => 'search_form_input' })%> Display team</td>
	  </tr>
        <tr>
	    <td align="right">Team name:</td>
	    <td><%= text_field(:team, :name, {"size" => "25", :class => "search_form_input"}) %></td>
	  </tr>
      <tr>
	    <td align="right">Team Type:</td>
	    <td><%= select :team, :team_type, ['Women', 'Men', 'Mixed'], {:prompt => "-please select-"},  {:class => "search_form_input"} %></td>
	  </tr>
	  <tr>
	    <td align="right">Captain First Name:</td>
	    <td ><%= text_field(:team, :cpt_first_name, {:size=>"25", :class => "search_form_input"}) %></td>
	   </tr>
      <tr>
	    <td align="right">Captain Last Name:</td>
	    <td><%= text_field(:team, :cpt_last_name, {"size" => "25", :class => "search_form_input"}) %></td>
	  </tr>
	  <tr>
	    <td align="right">Address:</td>
	    <td><%= text_field(:team, :address, {"size" => "25", :class => "search_form_input"}) %></td>
	  </tr>
	  <tr>
	    <td align="right">City:</td>
	    <td><%= text_field(:team, :city, {"size" => "25", :class => "search_form_input"}) %></td>
	  </tr>
	  <tr>
