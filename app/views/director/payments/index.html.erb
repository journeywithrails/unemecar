<% content_for :head_title do %>Payments<% end %>
<% content_for :top_nav do %><%= render :partial => 'shared/top_nav',:locals => {:param => "myracemenu"}%><% end %>
<% content_for :top_area do %><%= render :partial => 'director/shared/top_nav', :locals => {:step => "4"}%><% end %>

<table width="900" border="0" cellspacing="0" cellpadding="0">
<tr>
<td width="6">&nbsp;</td>
<td width="774" align="center" valign="bottom" class="tableHEAD"><p>Payments</p></td>
<td width="120" class="sidebarHeaderText">Featured Events </td>
</tr>
<tr>
<td>&nbsp;</td>
<td class="content_bg">
	<div id="director_table_holder">
	<table width="100%" cellspacing="0">
		
		<tr class="director_header_row">
			
			<td></td>
			<td>Amount</td>
			<td align="center">Payment Date</td>
			<td align="center">Check Number</td>
			<td>Notes</td>
			<td></td>
		</tr>
        <% if @payments.size > 0 %>
          <% @payments.each do | pay | %>
            <tr class="<%= cycle('director_row1', 'director_row2')%>">
              <td></td>
              <td><%=  number_to_currency pay.amount %></td>
              <td align="center"><%=  pay.date.strftime('%m/%d/%Y')%></td>
              <td align="center"><%=  "#{pay.check_number}"%></td>
              <td valign="top" align="left"><%=pay.notes %></td>
              <td></td>
          </tr>
          <% end  %>
        <% else  %>
          <tr class="<%= cycle('director_row1', 'director_row2')%>">
              <td colspan="6" align="center">You do not have any payments from RaceMenu.</td>

          </tr>
        <% end %>
		
	</table>
	</div>
				
</td>
<td width="120" rowspan="2" align="left" valign="top" id="ads"><%= render :partial => 'shared/ads'%></td>
<td style="padding-right:10px;"></td>
</tr>
<tr>
<td>&nbsp;</td>
<td id="tableBOTTOMshadow">&nbsp;</td>
</tr>
<%= render :partial => 'shared/footer'%>
</table>