                width: 24em; 
                margin: 0 0 0 0; 
                padding: .5em; 
                /* border-top: 1px solid #999; */ 
        } 
     --> 
</style> 
</head>

<body>
<div class="low_bar" align="center">&nbsp; 
<% if false %>
<%= link_to "Events", {:controller => "events", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Event Types", {:controller => "event_types", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Users", {:controller => "rm_users", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Features", {:controller => "features", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Homepage Features", {:controller => "home_features", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Reports", {:controller => "reports", :action => "index"}%>&nbsp;|&nbsp;
<%= link_to "Powered by RM", {:controller => "active_events", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Add Event Requests", {:controller => "add_events", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Simple Form Requests", {:controller => "manual_entries", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Facebook Requests", {:controller => "director_requests", :action => "list"}%>&nbsp;|&nbsp;
<%= link_to "Logout", {:controller => "login", :action => "out"}%>
<% end %>

<% 
if controller.controller_name == "active_events" or controller.controller_name == "events" or controller.controller_name == "event_types" or controller.controller_name == "cancellations"
	@step = 1
elsif controller.controller_name == "features" or controller.controller_name == "home_features"
	@step = 2
elsif controller.controller_name == "add_events" or controller.controller_name == "manual_entries" or controller.controller_name == "director_requests"
	@step = 3
elsif controller.controller_name == "rm_users"
	@step = 4
elsif controller.controller_name == "tools" or controller.controller_name == "reports" or controller.controller_name == "audits" or controller.controller_name == "contents" or controller.controller_name == "redirects"
	@step = 5
end	
%>

<%= render :partial => '/shared/admin_menu', :locals => {:step => @step}%>

</div>
      <%= yield %> 
  

</body>
</html>