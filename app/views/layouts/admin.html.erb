<%= javascript_include_tag :fckeditor %>
<%= stylesheet_link_tag "admin_anylinkcssmenu"%>
	<%= javascript_include_tag "anylinkcssmenu"%>
	<script type="text/javascript">anylinkcssmenu.init("anchorclass")</script>
<style type="text/css"> 
     <!-- 
     .active-scaffold .sub-form table{ 
       /* border-left: 1px solid black; */ 
       border-left: 0px solid black; 
     } 
     .active-scaffold .sub-form table * { 
       display: inline; 
     } 
     .active-scaffold .sub-form label { 
       display: inline; 
       padding: 0.0em; 
     } 
     .active-scaffold .sub-form table thead { 
       display: none; 
     } 
     .active-scaffold .sub-form table td { 
       padding: 0.0em; 
     } 
    .active-scaffold .sub-form dl 
        { 
                width: 41.1em; 
                margin: 2em 0; 
                padding: 0; 
        } 
        .active-scaffold .sub-form dt 
        { 
                width: 15em; 
                float: left; 
                margin: 0 0 0 0; 
                padding: .5em; 
                /* border-top: 1px solid #999; */ 
        } 
        /* commented backslash hack for mac-ie5 \*/ 
        dt { clear: both; } 
        /* end hack */ 
        .active-scaffold .sub-form dd 
        { 
