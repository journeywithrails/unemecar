<% content_for :head_title do %>Change the order of your team - <%= @team.name %><% end %>
<% content_for :top_nav do %><%= render :partial => 'shared/top_nav', :locals => {:param => "myracemenu"}%><% end %>
<% content_for :top_area do %><%= render :partial => 'myracemenu/mrm_top', :locals => {:param => nil, :show_buddies => true}%><% end %>
<table width="900" border="0" cellspacing="0" cellpadding="0">
<tr>
<td width="6">&nbsp;</td>
<td width="774" align="center" valign="bottom" class="tableHEAD"><p>Change the order of your team - <%= @team.name %></p></td>
<td width="120" class="sidebarHeaderText">Featured Events </td>
</tr>
<tr>
<td>&nbsp;</td>
<td class="content_bg">
	<div id="director_table_holder">
       <div style="padding-right:10px;padding-left:20px;padding-top: 3px;	padding-bottom: 3px;">
         <br/>
        Drag and drop an item to change its position.
      </div>
      <ol id='sortable_entries' style="font-size:14px;font-weight:bold;">
        <% @team_entries.each do |entry| %>
          <li id='race_<%= entry.id %>' style="cursor: move;padding-top:7px"><%=  "#{entry.event_registration.first_name} #{entry.event_registration.last_name}" %></li>
          <%= sortable_element("sortable_entries", :url => { :action => "reorder_team" }) %>
        <% end  %>
      </ol>
      <br/>
      <div style="padding-right:10px;padding-left:20px;padding-top: 3px;	padding-bottom: 3px;">
        <%= link_to "done reordering", :action => "team", :event => @team.event.id %>
      </div>
      <br/>
	</div>

</td>
<td width="120" rowspan="2" align="left" valign="top" id="ads"><%= render :partial => 'shared/ads'%></td>
<td style="padding-right:10px;"></td>
</tr>
<tr>
<td>&nbsp;</td>
<td id="tableBOTTOMshadow">&nbsp;</td>
</tr>
<%= render :partial => 'shared/footer'%>
</table>
